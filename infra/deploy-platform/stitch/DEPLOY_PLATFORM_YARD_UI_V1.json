{
  "$schema": "https://aims.dev/schemas/stitch-trigger.json",
  "trigger": "DEPLOY_PLATFORM_YARD_UI_V1",
  "name": "Deploy Platform Yard UI",
  "version": "1.0.0",
  "description": "Stitch design trigger for Deploy Platform UI matching the 'Boomer_Angs on the Port' concept art",

  "screens": {
    "deployHome": {
      "name": "Deploy Home (Yard View)",
      "description": "Main landing screen showing the container yard",
      "components": [
        {
          "id": "lane_selector",
          "type": "tab_group",
          "description": "Toggle between Deploy It and Guide Me lanes",
          "options": ["Deploy It", "Guide Me"],
          "visual": "Two distinct traffic lanes with signage"
        },
        {
          "id": "active_shifts",
          "type": "card_list",
          "description": "Currently running deployment shifts",
          "visual": "Active cranes with progress indicators"
        },
        {
          "id": "yard_capacity_meter",
          "type": "gauge",
          "description": "Current resource utilization across the yard",
          "visual": "Capacity bar showing container stacking density"
        },
        {
          "id": "recent_receipts",
          "type": "list",
          "description": "Recently completed shifts with receipts",
          "visual": "Completed container deliveries with checkmarks"
        }
      ],
      "layout": "grid_2x2"
    },

    "manifestBuilder": {
      "name": "Manifest Builder (ACHEEVY Surface)",
      "description": "ACHEEVY-powered interface for creating deployment manifests",
      "components": [
        {
          "id": "workload_selector",
          "type": "container_cards",
          "description": "What will be deployed (containers)",
          "visual": "Selectable container cards with ID, tenant, state"
        },
        {
          "id": "wave_planner",
          "type": "timeline",
          "description": "Waves + rollback thresholds",
          "visual": "Horizontal timeline showing deployment phases"
        },
        {
          "id": "rollback_config",
          "type": "form",
          "description": "Configure rollback triggers and thresholds",
          "visual": "Safety controls panel"
        },
        {
          "id": "crew_preview",
          "type": "badge_list",
          "description": "Which supervisors will oversee this deployment",
          "visual": "Boomer_Ang crew badges"
        },
        {
          "id": "luc_estimate",
          "type": "cost_card",
          "description": "Estimated cost from LUC",
          "visual": "Budget meter with approval status"
        }
      ],
      "layout": "wizard_steps"
    },

    "shiftLiveView": {
      "name": "Shift Live View",
      "description": "Real-time view of an executing shift",
      "components": [
        {
          "id": "crane_progress",
          "type": "animated_progress",
          "description": "Cranes working (progress)",
          "visual": "Animated crane arms lifting and placing containers"
        },
        {
          "id": "crew_badges",
          "type": "avatar_group",
          "description": "Who's supervising",
          "visual": "Boomer_Ang supervisor badges with status dots"
        },
        {
          "id": "chicken_hawk_activity",
          "type": "activity_feed",
          "description": "Chicken_Hawk worker activity log - shows power level evolution",
          "visual": "Chicken_Hawk icons at various power levels executing tasks"
        },
        {
          "id": "wave_timeline",
          "type": "progress_bar",
          "description": "Current wave progress",
          "visual": "Segmented progress bar with wave markers"
        },
        {
          "id": "incident_panel",
          "type": "alert_panel",
          "description": "Any incidents or warnings",
          "visual": "Incident beacon (amber/red escalation)"
        },
        {
          "id": "safety_bar",
          "type": "status_bar",
          "description": "Budget + policy status",
          "visual": "Green/amber/red status indicators"
        }
      ],
      "layout": "dashboard"
    },

    "receipt": {
      "name": "Receipt",
      "description": "Proof of completed shift",
      "components": [
        {
          "id": "change_summary",
          "type": "diff_view",
          "description": "What changed",
          "visual": "Before/after container state comparison"
        },
        {
          "id": "audit_proof",
          "type": "certificate",
          "description": "Proof + audit hooks (KYB)",
          "visual": "Signed receipt with verification checkmarks"
        },
        {
          "id": "cost_breakdown",
          "type": "invoice",
          "description": "Cost summary (LUC)",
          "visual": "Itemized cost breakdown with totals"
        },
        {
          "id": "flight_recorder_link",
          "type": "link",
          "description": "Link to detailed execution logs",
          "visual": "Flight recorder icon"
        },
        {
          "id": "approval_chain",
          "type": "timeline",
          "description": "Who approved what and when",
          "visual": "Signature chain with timestamps"
        }
      ],
      "layout": "document"
    }
  },

  "uiComponents": {
    "containerCards": {
      "description": "Cards representing deployable workloads",
      "fields": ["id", "tenant", "state", "health"],
      "states": {
        "pending": { "color": "#6B7280", "icon": "clock" },
        "running": { "color": "#22C55E", "icon": "play" },
        "updating": { "color": "#F59E0B", "icon": "refresh" },
        "failed": { "color": "#EF4444", "icon": "alert" },
        "quarantined": { "color": "#8B5CF6", "icon": "shield" }
      },
      "visual": "Stacked container appearance with status lights"
    },

    "shiftTimeline": {
      "description": "Horizontal timeline showing deployment waves",
      "segments": ["wave_markers", "current_position", "gate_conditions"],
      "visual": "Rail track with stations for each wave"
    },

    "crewBadges": {
      "description": "Identity markers for Boomer_Ang supervisors and Chicken_Hawk workers",
      "supervisorFields": ["role", "moniker", "status"],
      "chickenHawkFields": ["function", "powerLevel", "shiftId", "serial"],
      "visual": "Boomer_Ang badges + Chicken_Hawk icons with power level indicators"
    },

    "chickenHawkEvolution": {
      "description": "Visual representation of Chicken_Hawk power levels",
      "states": {
        "base": {
          "name": "Chick",
          "icon": "chicken_hawk_base",
          "color": "#22C55E",
          "description": "Small determined chick - atomic tasks"
        },
        "powered": {
          "name": "Hawk",
          "icon": "chicken_hawk_powered",
          "color": "#3B82F6",
          "description": "Wings spread with energy aura - parallel tasks"
        },
        "maxPower": {
          "name": "Super_Hawk",
          "icon": "chicken_hawk_max",
          "color": "#F59E0B",
          "description": "Full power-up form - complex operations"
        }
      },
      "animation": "power_up_transition"
    },

    "safetyBar": {
      "description": "Status indicators for budget and policy",
      "indicators": [
        { "name": "budget", "source": "LUC", "icon": "dollar" },
        { "name": "policy", "source": "KYB", "icon": "shield" },
        { "name": "killSwitch", "source": "SafetyOps", "icon": "power" }
      ],
      "visual": "Traffic light style status panel"
    },

    "incidentBeacon": {
      "description": "Alert indicator for issues requiring attention",
      "levels": {
        "green": { "label": "All Clear", "icon": "check" },
        "amber": { "label": "Warning", "icon": "alert-triangle", "action": "review" },
        "red": { "label": "Critical", "icon": "alert-circle", "action": "escalate" }
      },
      "visual": "Rotating beacon light"
    }
  },

  "visualCues": {
    "description": "Design guidelines from the concept art",
    "industrialGrid": {
      "description": "Industrial grid / lanes layout",
      "implementation": "CSS grid with defined lanes and stacking zones"
    },
    "stackedContainerLayout": {
      "description": "Stacked container appearance",
      "implementation": "3D-style layered cards with depth shadows"
    },
    "controlSignals": {
      "description": "Status lights showing operational state",
      "implementation": "LED-style indicators with glow effects"
    },
    "crewIdentityMarkers": {
      "description": "Badges showing crew membership",
      "implementation": "Avatar badges with role-specific colors and icons"
    }
  },

  "colorPalette": {
    "primary": "#F59E0B",
    "accent": "#FCD34D",
    "success": "#22C55E",
    "warning": "#F59E0B",
    "danger": "#EF4444",
    "info": "#3B82F6",
    "neutral": {
      "50": "#F9FAFB",
      "100": "#F3F4F6",
      "200": "#E5E7EB",
      "300": "#D1D5DB",
      "400": "#9CA3AF",
      "500": "#6B7280",
      "600": "#4B5563",
      "700": "#374151",
      "800": "#1F2937",
      "900": "#111827"
    },
    "crewRoles": {
      "CraneOps": "#3B82F6",
      "YardOps": "#8B5CF6",
      "SafetyOps": "#EF4444",
      "LoadOps": "#22C55E",
      "DispatchOps": "#F59E0B"
    }
  },

  "typography": {
    "fontFamily": {
      "display": "Permanent Marker",
      "body": "Inter",
      "mono": "JetBrains Mono"
    },
    "sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem"
    }
  },

  "animations": {
    "craneMovement": {
      "type": "translate",
      "duration": "2s",
      "easing": "ease-in-out"
    },
    "containerLift": {
      "type": "scale + translate",
      "duration": "1s",
      "easing": "ease-out"
    },
    "statusPulse": {
      "type": "opacity",
      "duration": "1.5s",
      "iteration": "infinite"
    },
    "beaconRotate": {
      "type": "rotate",
      "duration": "2s",
      "iteration": "infinite"
    }
  }
}
