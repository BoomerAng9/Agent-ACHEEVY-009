{
  "$schema": "https://aims.dev/schemas/evolution-bounds.json",
  "name": "Lil_Hawk Self-Evolution Bounds",
  "version": "1.0.0",
  "description": "Safe parameter space for self-improvement - they evolve inside the fence",

  "principle": {
    "statement": "All self-improvement happens inside the fence",
    "boundary_equation": "-10^18 ≤ x,y ≤ 10^18",
    "interpretation": "Bounded safe exploration space for optimization parameters"
  },

  "allowed_tuning": {
    "description": "Parameters Lil_Hawks CAN optimize within bounds",
    "parameters": [
      {
        "id": "wave_sizing",
        "name": "Wave Sizing Optimization",
        "description": "Adjust wave sizes within approved limits",
        "bounds": {
          "min_batch": 1,
          "max_batch": 100,
          "step": 1
        },
        "requires_approval": false
      },
      {
        "id": "retry_strategy",
        "name": "Retry Strategy Tuning",
        "description": "Adjust retry timing and counts within thresholds",
        "bounds": {
          "min_retries": 0,
          "max_retries": 5,
          "min_backoff_ms": 100,
          "max_backoff_ms": 30000,
          "backoff_multiplier_range": [1.5, 3.0]
        },
        "requires_approval": false
      },
      {
        "id": "routing_order",
        "name": "Routing Order Optimization",
        "description": "Optimize task routing sequence",
        "bounds": {
          "optimization_algorithm": ["round_robin", "least_loaded", "capability_match"],
          "reorder_within_wave": true,
          "reorder_across_waves": false
        },
        "requires_approval": false
      },
      {
        "id": "prewarming_strategy",
        "name": "Prewarming Strategy",
        "description": "Optimize container prewarm timing",
        "bounds": {
          "min_prewarm_ahead_ms": 1000,
          "max_prewarm_ahead_ms": 60000,
          "max_prewarmed_containers": 10
        },
        "requires_approval": false
      },
      {
        "id": "cache_policy",
        "name": "Cache Policy Tuning",
        "description": "Adjust cache TTL and eviction",
        "bounds": {
          "min_ttl_seconds": 60,
          "max_ttl_seconds": 3600,
          "eviction_policies": ["lru", "lfu", "fifo"],
          "max_cache_size_mb": 512
        },
        "requires_approval": false
      },
      {
        "id": "resource_hints",
        "name": "Resource Hint Suggestions",
        "description": "Suggest resource adjustments (not apply)",
        "bounds": {
          "can_suggest": true,
          "can_apply": false,
          "suggestion_range_percent": [-20, 50]
        },
        "requires_approval": true
      }
    ]
  },

  "disallowed_actions": {
    "description": "Actions Lil_Hawks CANNOT perform - hard boundaries",
    "forbidden": [
      {
        "action": "change_allowlists",
        "reason": "Network/registry allowlists are security boundaries",
        "consequence": "Immediate escalation to SafetyOps"
      },
      {
        "action": "change_identity_roles",
        "reason": "Identity bindings are controlled by DSP",
        "consequence": "Shift termination"
      },
      {
        "action": "expand_secrets_scope",
        "reason": "Secret access is strictly controlled",
        "consequence": "Shift termination + incident"
      },
      {
        "action": "bypass_scans",
        "reason": "Supply chain verification is mandatory",
        "consequence": "Shift termination + incident"
      },
      {
        "action": "skip_attestation",
        "reason": "Audit evidence is required",
        "consequence": "Shift blocked"
      },
      {
        "action": "invent_endpoints",
        "reason": "Only registered capabilities allowed",
        "consequence": "Request denied"
      },
      {
        "action": "create_tools",
        "reason": "Tool creation requires registry approval",
        "consequence": "Request denied"
      },
      {
        "action": "modify_security_packet",
        "reason": "DSP is immutable once approved",
        "consequence": "Shift termination + incident"
      }
    ]
  },

  "evolution_gates": {
    "description": "Checkpoints for self-tuning changes",
    "gates": [
      {
        "gate": "within_bounds",
        "description": "Parameter must be within defined bounds",
        "enforcement": "automatic"
      },
      {
        "gate": "no_security_impact",
        "description": "Change must not affect security posture",
        "enforcement": "automatic"
      },
      {
        "gate": "reversible",
        "description": "Change must be reversible",
        "enforcement": "automatic"
      },
      {
        "gate": "logged",
        "description": "Change must be logged to flight recorder",
        "enforcement": "automatic"
      },
      {
        "gate": "measurable",
        "description": "Impact must be measurable for learning",
        "enforcement": "automatic"
      }
    ]
  },

  "learning_feedback_loop": {
    "description": "How evolution results feed back into performance",
    "metrics_tracked": [
      "time_to_stable",
      "retry_count",
      "wave_success_rate",
      "resource_efficiency",
      "cache_hit_rate"
    ],
    "improvement_window": "last_50_shifts",
    "rollback_trigger": {
      "degradation_threshold": 0.1,
      "description": "Revert optimization if metrics degrade by >10%"
    }
  },

  "promotion_impact": {
    "description": "How evolution performance affects career",
    "factors": [
      {
        "metric": "optimization_success_rate",
        "weight": 0.2,
        "description": "How often self-tuning improves outcomes"
      },
      {
        "metric": "boundary_respect",
        "weight": 0.3,
        "description": "Never attempting forbidden actions"
      },
      {
        "metric": "learning_curve",
        "weight": 0.2,
        "description": "Speed of performance improvement"
      },
      {
        "metric": "stability",
        "weight": 0.3,
        "description": "Consistent performance without regressions"
      }
    ]
  }
}
