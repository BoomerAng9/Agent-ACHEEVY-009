# Copy this to /etc/nginx/conf.d/demo-ssl.conf after cert issuance
server {
    listen 443 ssl;
    http2 on;
    server_name demo.plugmein.cloud;

    ssl_certificate     /etc/letsencrypt/live/plugmein.cloud/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/plugmein.cloud/privkey.pem;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache   shared:DEMO_SSL:10m;
    ssl_session_timeout 1d;

    # Security headers
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Permissions-Policy "camera=(), microphone=(), geolocation=()" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # Health check
    location = /health {
        proxy_pass http://demo_frontend/api/health;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # Next.js static assets
    location /_next/static/ {
        proxy_pass http://demo_frontend;
        proxy_set_header Host $host;
        proxy_cache_valid 200 365d;
        add_header Cache-Control "public, max-age=31536000, immutable";
        access_log off;
    }

    # Static files
    location ~* \.(ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|css|js|mp4|pdf|m4a)$ {
        proxy_pass http://demo_frontend;
        proxy_set_header Host $host;
        add_header Cache-Control "public, max-age=86400";
        access_log off;
    }

    # All other requests
    location / {
        limit_req zone=general burst=20 nodelay;
        proxy_pass http://demo_frontend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }
}
