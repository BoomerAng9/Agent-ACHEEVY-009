{
  "name": "aims-skills",
  "version": "1.0.0",
  "description": "A.I.M.S. Skills, Hooks, and LUC Billing Engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:skills": "jest --testPathPattern=skills",
    "test:hooks": "jest --testPathPattern=hooks",
    "test:luc": "jest --testPathPattern=luc",
    "lint": "eslint src/**/*.ts",
    "setup:stripe": "node scripts/setup-stripe-products.js",
    "setup:firestore": "npx ts-node scripts/init-firestore-schema.ts"
  },
  "keywords": [
    "aims",
    "acheevy",
    "skills",
    "hooks",
    "luc",
    "billing"
  ],
  "author": "A.I.M.S. Team",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
