{
  "hosting": {
    "public": "frontend/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "aims-skills",
      "codebase": "aims-billing",
      "ignore": [
        "node_modules",
        ".git",
        "tests"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    },
    {
      "source": "functions",
      "codebase": "aims-functions",
      "ignore": [
        "node_modules",
        ".git",
        "lib"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "extensions": {
    "firestore-stripe-payments": "stripe/firestore-stripe-payments@0.3.12",
    "firestore-send-email": "firebase/firestore-send-email@0.1.34",
    "firestore-bigquery-export": "firebase/firestore-bigquery-export@0.1.53"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
