{
  "$schema": "https://aims.dev/schemas/workforce-structure.json",
  "name": "Deploy Yard Workforce Structure",
  "version": "1.0.0",
  "description": "Career progression, certifications, and job designations for the Lil_Hawks workforce",

  "hierarchy": {
    "command": {
      "role": "Chicken Hawk",
      "title": "Yardmaster / Shift Leader",
      "description": "Command role that oversees Squad operations and coordinates with Boomer_Ang supervisors",
      "responsibilities": [
        "Shift planning and assignment",
        "Squad coordination",
        "Escalation to Boomer_Ang supervisors",
        "Performance reviews"
      ]
    },
    "team": {
      "role": "Squad",
      "title": "Team Assignment",
      "description": "Coordinated group of Lil_Hawks assigned to a Shift",
      "composition": {
        "min_size": 1,
        "max_size": 10,
        "requires_lead": true
      }
    },
    "operators": {
      "role": "Lil_Hawk",
      "title": "Operator / Worker",
      "description": "Individual worker with job designation, career level, and performance history"
    }
  },

  "job_designations": {
    "description": "Specialized roles for Lil_Hawks based on their crew assignment",
    "designations": {
      "CraneOps": [
        {"id": "Lil_Packer_Hawk", "specialty": "Container packaging and sealing"},
        {"id": "Lil_Lifter_Hawk", "specialty": "Heavy lifting and placement"},
        {"id": "Lil_Roller_Hawk", "specialty": "Rolling updates and deployments"},
        {"id": "Lil_Swapper_Hawk", "specialty": "Blue/green and canary swaps"}
      ],
      "YardOps": [
        {"id": "Lil_Router_Hawk", "specialty": "Traffic routing and lane assignment"},
        {"id": "Lil_Stacker_Hawk", "specialty": "Container stacking and organization"},
        {"id": "Lil_Binder_Hawk", "specialty": "Network and storage binding"}
      ],
      "SafetyOps": [
        {"id": "Lil_Guard_Hawk", "specialty": "Budget enforcement and rate limiting"},
        {"id": "Lil_Watch_Hawk", "specialty": "Incident monitoring and escalation"},
        {"id": "Lil_Verify_Hawk", "specialty": "Health checks and validation"}
      ],
      "LoadOps": [
        {"id": "Lil_Hauler_Hawk", "specialty": "Artifact transport and delivery"},
        {"id": "Lil_Cleaner_Hawk", "specialty": "Cleanup and log rotation"},
        {"id": "Lil_Healer_Hawk", "specialty": "Auto-heal and drift detection"}
      ],
      "DispatchOps": [
        {"id": "Lil_Dispatch_Hawk", "specialty": "Work order sequencing"},
        {"id": "Lil_Wave_Hawk", "specialty": "Wave control and timing"},
        {"id": "Lil_Sync_Hawk", "specialty": "Synchronization and coordination"}
      ]
    }
  },

  "career_levels": {
    "description": "Progression path for Lil_Hawks",
    "levels": [
      {
        "level": 1,
        "title": "Apprentice",
        "prefix": "Lil_",
        "description": "Learning the ropes, supervised closely",
        "requirements": {
          "shifts_completed": 0,
          "certifications": [],
          "safety_record": "N/A"
        },
        "permissions": {
          "can_lead_squad": false,
          "max_concurrent_tasks": 1,
          "requires_supervision": true
        }
      },
      {
        "level": 2,
        "title": "Journeyman",
        "prefix": "Jman_",
        "description": "Proven operator, can work independently",
        "requirements": {
          "shifts_completed": 50,
          "certifications": ["Y-ISO-01", "Y-ISO-03"],
          "safety_record": "0 critical violations in last 30 shifts"
        },
        "permissions": {
          "can_lead_squad": false,
          "max_concurrent_tasks": 3,
          "requires_supervision": false
        }
      },
      {
        "level": 3,
        "title": "Foreman",
        "prefix": "Fore_",
        "description": "Squad leader, mentors apprentices",
        "requirements": {
          "shifts_completed": 200,
          "certifications": ["Y-ISO-01", "Y-ISO-02", "Y-ISO-03", "Y-ISO-04"],
          "safety_record": "0 critical violations in last 100 shifts",
          "mentored_apprentices": 5
        },
        "permissions": {
          "can_lead_squad": true,
          "max_concurrent_tasks": 5,
          "can_mentor": true,
          "can_approve_promotions": false
        }
      },
      {
        "level": 4,
        "title": "Chicken Hawk_Candidate",
        "prefix": "Cand_",
        "description": "Training for command role",
        "requirements": {
          "shifts_completed": 500,
          "certifications": ["Y-ISO-01", "Y-ISO-02", "Y-ISO-03", "Y-ISO-04", "Y-ISO-05"],
          "safety_record": "0 violations in last 200 shifts",
          "squads_led": 20,
          "efficiency_score": 0.95
        },
        "permissions": {
          "can_lead_squad": true,
          "max_concurrent_tasks": 10,
          "can_mentor": true,
          "can_approve_promotions": true,
          "shadow_chicken_hawk": true
        }
      }
    ]
  },

  "certifications": {
    "description": "Internal ISO-like badges for Lil_Hawks",
    "badges": [
      {
        "id": "Y-ISO-01",
        "name": "Identity & Access Certified",
        "description": "Service identities, least privilege, mTLS",
        "training_hours": 4,
        "renewal_shifts": 100
      },
      {
        "id": "Y-ISO-02",
        "name": "Supply Chain Certified",
        "description": "SBOM, signing, malware scan",
        "training_hours": 6,
        "renewal_shifts": 100
      },
      {
        "id": "Y-ISO-03",
        "name": "Runtime Hardening Certified",
        "description": "Non-root, read-only FS, capability drop",
        "training_hours": 8,
        "renewal_shifts": 100
      },
      {
        "id": "Y-ISO-04",
        "name": "Evidence & Audit Certified",
        "description": "KYB flight recorder sealing",
        "training_hours": 4,
        "renewal_shifts": 100
      },
      {
        "id": "Y-ISO-05",
        "name": "Safety Operations Certified",
        "description": "Kill switch, quarantine, rollback thresholds",
        "training_hours": 10,
        "renewal_shifts": 50
      }
    ]
  },

  "performance_tracking": {
    "description": "KPIs for Activity Breeds Activity",
    "metrics": {
      "efficiency": {
        "description": "Tasks completed vs time allocated",
        "weight": 0.3
      },
      "quality": {
        "description": "Success rate, no rollbacks needed",
        "weight": 0.3
      },
      "safety_adherence": {
        "description": "Zero violations, proper escalation",
        "weight": 0.25
      },
      "artifacts_verified": {
        "description": "Proper signing, sealing, audit trails",
        "weight": 0.15
      }
    },
    "promotion_threshold": 0.85,
    "activity_breeds_activity": {
      "description": "Measurable KPI: output delivered, incidents avoided, time saved, artifacts verified",
      "formula": "(output_score * 0.4) + (incidents_avoided * 0.3) + (time_saved * 0.2) + (artifacts_verified * 0.1)"
    }
  },

  "shift_lifecycle": {
    "description": "Every entity runs on shift cycles",
    "phases": [
      {
        "phase": "clock_in",
        "description": "Roll call and assignment",
        "activities": ["identity_verification", "assignment_receipt", "tool_checkout"]
      },
      {
        "phase": "execution",
        "description": "Active work on assigned tasks",
        "activities": ["task_execution", "status_reporting", "collaboration"]
      },
      {
        "phase": "debrief",
        "description": "Shift summary and handoff",
        "activities": ["completion_report", "incident_summary", "handoff_notes"]
      },
      {
        "phase": "clock_out",
        "description": "End of shift",
        "activities": ["tool_return", "log_seal", "availability_update"]
      }
    ],
    "between_shifts": {
      "training_modules": true,
      "promotion_eligibility_checks": true,
      "mentoring": {
        "enabled": true,
        "supervised_by": "Boomer_Ang"
      }
    }
  }
}
