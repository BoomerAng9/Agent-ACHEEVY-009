# ===========================================================================
# A.I.M.S. Frontend Environment
# Copy this file to .env.local and fill in the values
# ===========================================================================

# ---------------------------------------------------------------------------
# Database — Prisma SQLite
# ---------------------------------------------------------------------------
DATABASE_URL="file:./dev.db"

# ACP Proxy — the frontend API route endpoint
NEXT_PUBLIC_ACP_ENDPOINT=http://localhost:3000/api/acp

# UEF Gateway — used by the API route server-side
UEF_ENDPOINT=http://localhost:3001

# Internal API key — must match backend INTERNAL_API_KEY
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=

# ---------------------------------------------------------------------------
# NextAuth.js — Authentication
# ---------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-to-a-random-secret

# Owner emails — comma-separated, these get super admin access
OWNER_EMAILS=

# Google OAuth (get from console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---------------------------------------------------------------------------
# Stripe — Payments & Subscriptions
# ---------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_PRICE_GARAGE=
STRIPE_PRICE_COMMUNITY=
STRIPE_PRICE_ENTERPRISE=
STRIPE_PRICE_P2P=
STRIPE_WEBHOOK_SECRET=

# ---------------------------------------------------------------------------
# OpenRouter — LLM Gateway (Claude, GPT-4, Gemini, etc.)
# ---------------------------------------------------------------------------
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ---------------------------------------------------------------------------
# ElevenLabs — Voice Agent & TTS (Primary TTS)
# ---------------------------------------------------------------------------
NEXT_PUBLIC_ELEVENLABS_AGENT_ID=
ELEVENLABS_API_KEY=

# ---------------------------------------------------------------------------
# Deepgram — TTS (Aura-2 fallback) + STT (Nova-3 fallback)
# Get key from: https://console.deepgram.com
# ---------------------------------------------------------------------------
DEEPGRAM_API_KEY=

# ---------------------------------------------------------------------------
# Groq — STT (Whisper inference, primary transcription)
# Get key from: https://console.groq.com
# ---------------------------------------------------------------------------
GROQ_API_KEY=
